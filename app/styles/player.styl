div[role='player']
    box-sizing: border-box
    position:absolute
    bottom:0
    left:0
    height: 72px
    width: 100%
    background-color: #eff1f4
    border: solid 1px #cedae4
    
    audio
        position: absolute
        top: 20px
        right: 0px

    .player
        display: flex
        width: 100%
    
    .play-controls
        padding-left 16px
        padding-top: 12px
        padding-bottom: 12px
        width: 280px
        box-sizing: border-box
        
        img
            height: 48px
            width: 48px
            box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1)

        svg
            height: 34px
            width: 34px
            padding-top: 7px
            padding-bottom: 7px
            padding-left: 28px
            cursor: pointer
            
            path
                fill: #696d78
                
    .timeline
        margin-left: 32px
        margin-right: 32px
        flex-grow: 1
        
        .text-container
            width: 100%
            justify-content: center
            display: flex

            p
                margin-top: 6px
                color: $text-light
       
            #artist
                color: $text-light
                
        p
            color: #92a0b2
            height: 20px
            font-family: "SSP-sb"
            font-size: 14px
            line-height: 1.5
            display: inline-block
            margin-top: 2px
                
        #total-time
            float: right

        #progress-bar
            margin-top: 8px
            background-color: #cedae4
            width: 100%
            height: 4px
            border-radius: 2px
            cursor: pointer
            
            #progress
                width: 32%
                height: 4px
                border-radius: 2px
                background-color: #0dbabe


    .controls
        width: 280px
        
        #speaker
            margin-right: 8px
        
        #volume-bar
            width: 90px
            height: 4px
            border-radius: 2px
            background-color: #cedae4
            display: inline-block
            position: absolute
            top: 34px
            cursor: pointer

            #volume
                width: 32%
                height: 4px
                border-radius: 2px
                background-color: #696d78
        
        svg
            width: 20px
            height: 20px
            margin-top: 26px
            margin-right: 16px
            display: inline-block
            cursor: pointer
            
            path
                fill: #92a0b2
                
        #broadcast
            float: right
            margin-right: 48px
            path
                fill: #f14a53
                

