div[role='toolbar']
    box-sizing: border-box
    height: 100%
    padding-top: 25px
    min-width: 280px
    flex-basis: 280px
    display: flex
    flex-direction: column
    background-color: #eff1f4
    border: solid 1px #cedae4

    .tools
        padding-left: 16px
        padding-right: 16px

        .button
            cursor: pointer
            font-family: 'SSP-sb'
            background-color: $blue
            border-radius: 2px
            height: 38px
            margin-bottom: 2px
            width: 100%
            padding-left: 15px
            box-sizing: border-box
            
            #import-sc-text
                display: none
            
            svg
                position: relative
                height: 20px
                width: 20px
                top: 6px
                
                path
                    fill: white

            p
                position: relative
                padding-left: 4px
                font-size: 14px
                line-height: 1.4
                margin-top: 9px
                margin-bottom: 10px
                height: 20px
                color: white
                display: inline-block

        .button:active
            padding-top: 1px
        
        .button-focused
            background-color: transparent
            border: solid 1px $blue
            
            
            input[type='text']
                all: unset
                box-sizing: border-box
                width: 100%
                height: 100%
                color: $text-light
        
        #search
            margin-top: 30px

        .input
            font-family: 'SSP-it'
            width: 100%
            height: 38px
            border-radius: 2px
            border: solid 1px $grey
            box-sizing: border-box
            position: relative
            
            p
                display: none

            svg
                position: absolute
                height: 20px
                width: 20px
                top: 8px
                left: 15px
                
                path
                    fill: $grey

            input[type='text']
                color: #788195
                all: unset
                padding-left: 40px
                box-sizing: border-box
                width: 100%
                height: 100%
            
        .input-focused
            border: solid 1px $blue
            font-family: 'SSP-reg'

            svg
                path
                    fill: $blue
                
                

    .playlists
        padding-right: 16px

        .add-playlist
            cursor: pointer
            
            h4
                margin-top: 0px
                margin-left: 4px
                display: inline-block
            
            svg
                height 16px
                width: 16px
                position: relative
                left: 32px
                top: 4px

                path
                    fill: #92a0b2


        h4
            margin-top: 33px
            margin-bottom: 0px
            padding-left: 32px
            height: 36px
            font-family: "SSP-sb"
            font-size: 13px
            line-height: 2.5
            color: $text

        p
            padding-left: 32px    
            height: 36px
            font-size: 16px
            line-height: 2.3
            color: $text-dark
            cursor: pointer

        p.selected
            color: white
            border-top-right-radius: 2px
            border-bottom-right-radius: 2px
            background-color: #f14a53
            
    .notification
        position: absolute
        left: 16px
        bottom: 93px
        width: 248px
        height: 66px
        border-radius: 3px
        background-color: #696d78
        box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1)
        opacity: 0
        display: none
        
        p
            position: absolute
            top: 10px
            left: 64px
            padding-right: 32px
            height: 42px
            font-family: "SSP-reg"
            font-size: 16px
            line-height: 1.3
            color: #ffffff
        
        svg
            position: absolute
            left: 14px
            top: 13px
            width: 40px
            height: 40px
            
            path
                fill: white
                
    .show
        animation-timing-function: ease;
        animation-name: show;
        animation-duration: 3s;

@keyframes show {
    0%   {opacity: 0}
    10%  {opacity: 1}
    90%  {opacity: 1}
    100% {opacity: 0}
}
